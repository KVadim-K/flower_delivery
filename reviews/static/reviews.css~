/* Стили для рейтинга звезд */
.star-rating {
    display: inline-flex;
    cursor: pointer;
}

.star {
    font-size: 2rem;
    color: #ddd; /* Цвет невыбранных звезд */
    transition: color 0.2s ease, transform 0.2s ease;
}

.star.selected,
.star.hover {
    color: #FFD700; /* Цвет выбранных и наведенных звезд - золотой */
    text-shadow: 0 0 5px rgba(255, 215, 0, 0.5), 0 0 10px rgba(255, 215, 0, 0.7);
}

/* Эффект увеличения при наведении */
.star:hover {
    transform: scale(1.2);
}

.star-rating .star:before {
    content: '\2605'; /* Символ звезды */
    background: linear-gradient(135deg, #FFD700 20%, #FFA500 80%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: #FFD700; /* Цвет для тех браузеров, которые не поддерживают градиенты */
}

.star.selected:before,
.star.hover:before {
    color: #FFD700;
    -webkit-text-fill-color: #FFD700;
}
