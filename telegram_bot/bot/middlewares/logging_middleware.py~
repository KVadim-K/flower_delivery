import logging
from aiogram import BaseMiddleware
from aiogram.types import Message

logger = logging.getLogger(__name__)

class LoggingMiddleware(BaseMiddleware):
    async def on_pre_process_message(self, message: Message, data: dict):
        logger.info(f"Получено сообщение от пользователя {message.from_user.id}: {message.text}")

    async def on_post_process_message(self, message: Message, results, data: dict):
        logger.info(f"Отправлено сообщение пользователю {message.from_user.id}")
